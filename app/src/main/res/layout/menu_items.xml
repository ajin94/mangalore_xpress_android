<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_whats_new"
            android:id="@+id/whats_new"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_article"
            android:id="@+id/article"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_doctor"
            android:layout_weight="1"
            android:id="@+id/health"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/real_estate"
            android:layout_weight="1"
            android:id="@+id/real_estate"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_store"
            android:layout_weight="1"
            android:id="@+id/services"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_basket_white_24dp"
            android:layout_weight="1"
            android:id="@+id/classifieds"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_contact_us"
            android:layout_weight="1"
            android:id="@+id/contact_us"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_white_24dp"
            android:layout_weight="1"
            android:id="@+id/home_btn"
            android:paddingBottom="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            />



    </LinearLayout>
</RelativeLayout>
